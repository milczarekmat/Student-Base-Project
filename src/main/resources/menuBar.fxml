<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar fx:id="menuBar" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.MenuBarController">
  <menus>
      <Menu mnemonicParsing="false">
          <graphic>
              <Label onMouseClicked="#toStart" text="Wyszukaj studenta" />
          </graphic>
      </Menu>
    <Menu mnemonicParsing="false" text="Studenci">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#toStudentList" text="Lista studentów" />
            <MenuItem mnemonicParsing="false" text="Dodaj studenta" />
            <MenuItem mnemonicParsing="false" text="Usuń studenta" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Przedmioty">
      <items>
        <MenuItem mnemonicParsing="false" text="Lista przedmiotów" />
            <MenuItem mnemonicParsing="false" text="Dodaj przedmiot" />
            <MenuItem mnemonicParsing="false" text="Usuń przedmiot" />
            <MenuItem mnemonicParsing="false" text="Uczęszczane przedmioty ze średnią ocen" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Zarządzanie">
      <items>
        <MenuItem mnemonicParsing="false" text="Modyfikuj przedmioty i oceny dla studenta" />
      </items>
    </Menu>
  </menus>
</MenuBar>
